<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground">


    <ImageView
        android:id="@+id/ivPrescriptionIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/prescription_svgrepo_com"
        android:layout_marginEnd="16dp" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/tvPrescriptionTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025-01-11"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center" />


        <TextView
            android:id="@+id/tvPrescriptionDoctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wystawił: Jan Kowalski"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center" />
    </LinearLayout>

    <Button
        android:id="@+id/btnPrescriptionDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Szczegóły" />

</LinearLayout>