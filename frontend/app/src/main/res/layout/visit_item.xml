<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground">


    <ImageView
        android:id="@+id/ivAppointmentIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/calendar_alt_svgrepo_com"
        android:layout_marginEnd="16dp" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/tvAppointmentStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start: 09:00 AM"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvAppointmentEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End: 10:00 AM"
            android:textSize="14sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvDoctorId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor ID: 12345"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center" />
    </LinearLayout>

    <Button
        android:id="@+id/btnMakeAppointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Book" />

</LinearLayout>